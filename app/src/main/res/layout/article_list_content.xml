<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tile_border"
    android:layout_marginBottom="5dp">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:textSize="9dp"
        android:id="@+id/published_date"
        android:textColor="#999999"
        android:layout_below="@id/thumbnail"
        android:layout_margin="5dp"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Published Date: 2018-07-20"/>

    <TextView
        android:id="@+id/title"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_margin="5dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Michael Cohen Secretly Taped Trump Discussing Payment to Playboy Model"/>

    <TextView
        android:id="@+id/short_description"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_below="@+id/title"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:singleLine="false"
        android:text="The F.B.I. seized the recording in a raid. Its existence recording highlights the potential legal and political danger that Mr. Cohen represents to the president."
        android:textColor="#555555"/>


    <TextView
        android:id="@+id/publisher"
        android:layout_below="@+id/short_description"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/published_date"
        android:gravity="right|bottom"
        android:paddingBottom="5dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="By MATT APUZZO, MAGGIE HABERMAN and MICHAEL S. SCHMIDT"
        android:textSize="9dp"
        android:textColor="#999999"/>
</RelativeLayout>